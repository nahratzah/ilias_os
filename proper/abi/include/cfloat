#ifndef _CFLOAT_
#define _CFLOAT_

#include <cdecl.h>

_namespace_begin(std)
_cdecl_begin

#define HUGE_VALF       (__builtin_huge_valf())
#define HUGE_VAL        (__builtin_huge_val())
#define HUGE_VALL       (__builtin_huge_vall())

#define INFINITY        (__builtin_inff())
#define DBL_INFINITY    (__builtin_inf())
#define LDBL_INFINITY   (__builtin_infl())

#define NAN             (__builtin_nanf(""))
#define DBL_NAN         (__builtin_nan(""))
#define LDBL_NAN        (__builtin_nanl(""))

// (__builtin_nansf())
// (__builtin_nans())
// (__builtin_nansl())

#define FLT_MANT_DIG    __FLT_MANT_DIG__
#define FLT_DIG         __FLT_DIG__
#define FLT_MAX_EXP     __FLT_MAX_EXP__
#define FLT_MIN_EXP     __FLT_MIN_EXP__
#define FLT_MAX_10_EXP  __FLT_MAX_10_EXP__
#define FLT_MIN_10_EXP  __FLT_MIN_10_EXP__
#define FLT_EPSILON     __FLT_EPSILON__
#define FLT_RADIX       __FLT_RADIX__
#define FLT_DENORM_MIN  __FLT_DENORM_MIN__

#define DBL_MANT_DIG    __DBL_MANT_DIG__
#define DBL_DIG         __DBL_DIG__
#define DBL_MAX_EXP     __DBL_MAX_EXP__
#define DBL_MIN_EXP     __DBL_MIN_EXP__
#define DBL_MAX_10_EXP  __DBL_MAX_10_EXP__
#define DBL_MIN_10_EXP  __DBL_MIN_10_EXP__
#define DBL_EPSILON     __DBL_EPSILON__
#define DBL_RADIX       __DBL_RADIX__
#define DBL_DENORM_MIN  __DBL_DENORM_MIN__

#define LDBL_MANT_DIG   __LDBL_MANT_DIG__
#define LDBL_DIG        __LDBL_DIG__
#define LDBL_MAX_EXP    __LDBL_MAX_EXP__
#define LDBL_MIN_EXP    __LDBL_MIN_EXP__
#define LDBL_MAX_10_EXP __LDBL_MAX_10_EXP__
#define LDBL_MIN_10_EXP __LDBL_MIN_10_EXP__
#define LDBL_EPSILON    __LDBL_EPSILON__
#define LDBL_RADIX      __LDBL_RADIX__
#define LDBL_DENORM_MIN __LDBL_DENORM_MIN__

#define FLT_MIN         __FLT_MIN__
#define FLT_MAX         __FLT_MAX__

#define DBL_MIN         __DBL_MIN__
#define DBL_MAX         __DBL_MAX__

#define LDBL_MIN        __LDBL_MIN__
#define LDBL_MAX        __LDBL_MAX__

_cdecl_end
_namespace_end(std)

#endif /* _CFLOAT_ */
