#ifndef _CSTDBOOL_
#define _CSTDBOOL_

#ifndef __cplusplus
typedef int Bool;
typedef Bool bool;
#define true	(1)
#define false	(0)
#else
using Bool = bool;

static_assert(sizeof(bool) == sizeof(int),
              "Bool and bool have different sizes!");
#endif

#define __bool_true_false_are_defined 1

#endif /* _CSTDBOOL_ */
